<% layout('layouts/boilerplate') %>
<div class="container mt-4">
    <h3 class="d-flex justify-content-center mt-4 mb-4">Create A New Post</h3>
    <form action="/posts" method="POST">
        <div class="form-group">
            <textarea class="form-control" name="postText" id="postText" rows="4" placeholder="Start writing..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Post</button>
        <a href="/" class="btn btn-primary mb-3">Go Back</a>
    </form>
</div>